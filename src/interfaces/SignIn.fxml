<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignInController">
   <children>
      <VBox fx:id="VBox" alignment="CENTER_LEFT" prefHeight="386.0" prefWidth="281.0" styleClass="white-pane" stylesheets="@../application/application.css">
         <children>
            <Label text="INGRESO" textFill="#c5304d">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="200.0" styleClass="tf_box">
               <children>
                  <ImageView fitHeight="39.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Username.png" />
                     </image>
                  </ImageView>
                  <JFXTextField fx:id="txt_userName" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Usuario" styleClass="tf" unFocusColor="#dedee4" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></JFXTextField>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="200.0" styleClass="tf_box">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="20.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="39.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Password.png" />
                     </image>
                  </ImageView>
                  <JFXPasswordField fx:id="txt_password" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Contraseña" styleClass="tf" unFocusColor="WHITE" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></JFXPasswordField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="200.0">
               <children>
                  <JFXButton fx:id="btn_passwordForgoten" alignment="BASELINE_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#sendPassword" prefHeight="35.0" prefWidth="162.0" text="¿Olvidó su Contraseña?" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="btn_seconnecter" onAction="#openHome" prefHeight="25.0" prefWidth="78.0" styleClass="pink-btn" stylesheets="@../application/application.css" text="Ingresar">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></JFXButton>
               </children>
               <padding>
                  <Insets left="15.0" right="20.0" />
               </padding>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <ImageView fitHeight="65.0" fitWidth="120.0" layoutX="97.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
